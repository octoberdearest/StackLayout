<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayout.Stack2">
    <StackLayout HorizontalOptions="Fill">
        <Label Text="nyc_photographer" />
        <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
        <StackLayout Padding="10">
            <StackLayout Orientation="Horizontal">
                <Label Text="Like" TextColor="LightSeaGreen" FontAttributes="Bold" FontSize="12" Margin="5" />
                <Label Text="Comment" TextColor="LightSeaGreen" FontAttributes="Bold" FontSize="12" Margin="5" />
                <Label Text="Share" TextColor="LightSeaGreen" FontAttributes="Bold" FontSize="12" Margin="5" />
            </StackLayout>

            <StackLayout>
                <BoxView Color="#f0f0f0" HeightRequest="1"></BoxView>
                <Label Text="700 likes" FontAttributes="Bold" />
                <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." />
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>